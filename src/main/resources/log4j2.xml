<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN" name="log4j2.xml">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" ignoreExceptions="false">
            <PatternLayout pattern="%d{ISO8601} %5p [%t] %c{1.} :%L - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="se.cygni" level="DEBUG" additivity="true">
        </Logger>

        <root level="INFO">
            <AppenderRef ref="Console"/>
        </root>
    </Loggers>
</Configuration>
